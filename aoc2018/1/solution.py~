# Part 1

print(sum([int(change) for change in open(filename)]))

# Part 2
def main():
    """
    Calculate the resulting frequency after all of the changes in frequency.
    """
    filename = '/home/vadik/Documents/exercises/aoc2018/1/input'

#    with open(filename, 'r') as f_i:
#        changes = f_i.readlines()

    i = 0
    theResultingFrequency = 0
    lst = []
    lst.append(theResultingFrequency)
    while i == 0:
        with open(filename, 'r') as f_i:
            changes = f_i.readlines()
#        fileinput = open(filename, 'r')
#        changes = fileinput.readlines()

        for change in changes:
            theResultingFrequency += int(change)
            if theResultingFrequency in lst and i == 0:
                print(theResultingFrequency)
                i += 1
            lst.append(theResultingFrequency)

if __name__ == "__main__":
    main()
